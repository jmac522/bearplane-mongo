!!! 5
%html{ :lang => "en" }
  %head
    %meta{ :charset => "utf-8" }

    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }

    %title= content_for?(:title) ? yield(:title) : "Untitled"

    = stylesheet_link_tag "application"
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tag

  %body
    .row
      .header.small-12.columns
        .row
          .header-img.small-12.columns= image_tag("bearplane.jpg")
          .nav.small-12.columns
          .row
            .left-nav.small-4.columns
              .row
                .link.small-4.columns
                  =link_to about_path do
                    %span about
                .link.small-4.columns
                  =link_to media_path do
                    %span media
                .link.small-4.columns
                  =link_to contact_path do
                    %span contact
            .center-nav.small-4.columns
              %h3
                =link_to "BEARPLANE", root_path
            .right-nav.small-4.columns
              .row
                .link.small-4.columns
                  =link_to shows_path do
                    %span calender
                .link.small-4.columns
                  %a.store{rel:"prettyPhoto", href:"http://www.cafepress.com/bearplane?iframe=true&width=95%&height=100%", title:"Bearplane Store" }
                    %span store
                .link.small-4.columns
                  =link_to links_path do
                    %span links
    = yield
    .footer.small-12.columns.no-pad
      .row
        .small-6.columns.footer-box
          Contact Form?
        .small-6.columns.footer-box
          Links and Whatnot
